<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/row_height"
              android:id="@+id/ll_movie_item">

    <ImageView
            android:id="@+id/iv_movie_poster"
            android:layout_width="0px"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_gallery"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/pdng_imgs"/>
    <TextView
            android:id="@+id/tv_movie_title_item_list"
            android:layout_width="0px"
            android:layout_weight="10"
            android:text="@string/tv_title_trending_movies"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="@dimen/row_text_size"
            android:padding="@dimen/pdng_imgs"/>

    <TextView
            android:id="@+id/tv_movie_rating_item_list"
            android:layout_width="0px"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:textSize="@dimen/row_text_size"
            android:padding="@dimen/pdng_imgs"
            android:gravity="center_vertical|right"/>

    <ImageView
            android:id="@+id/iv_movie_favourite_item_list"
            android:layout_width="0px"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:src="@android:drawable/btn_star_big_off"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:textSize="@dimen/row_text_size"
            android:padding="@dimen/pdng_imgs"/>
</LinearLayout>